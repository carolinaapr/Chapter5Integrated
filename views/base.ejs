<%- include('header') %> 

<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Binarian Login System</h2>
            <span>Masukkan email dan password anda</span>
            <% if(locals.logout) { %> 
                <div class="alert-success text-center">
                     <% logout %> 
                </div>
                <% } %>
        </div>
        <form action="/route/login" method="POST" class="pt-3">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email">
                <small class="f  text-muted text-left">Register email adress</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="password">
            </div>  
            <button type="submit" class="btn btn-success rounded-pi">SUBMIT </button>
        </form>
    </div>
</div>

<%-include('footer')%> 